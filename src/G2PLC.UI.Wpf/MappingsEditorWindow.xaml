<Window x:Class="G2PLC.UI.Wpf.MappingsEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Mappings.Title}"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource TextBrush}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="{DynamicResource Mappings.Header}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="{DynamicResource Mappings.Description}"
                                   TextWrapping="Wrap" Margin="5,5,5,15" FontStyle="Italic"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <!-- Headers -->
                            <TextBlock Grid.Column="0" Text="{DynamicResource Mappings.AxisName}" FontWeight="Bold" Margin="5"/>
                            <TextBlock Grid.Column="1" Text="{DynamicResource Mappings.AxisDescription}" FontWeight="Bold" Margin="5"/>
                            <TextBlock Grid.Column="2" Text="{DynamicResource Mappings.RegisterAddress}" FontWeight="Bold" Margin="5"/>
                            <TextBlock Grid.Column="3" Text="{DynamicResource Mappings.ScaleFactor}" FontWeight="Bold" Margin="5"/>
                            <TextBlock Grid.Column="4" Text="" FontWeight="Bold" Margin="5"/>
                        </Grid>
                    </Grid>
                </GroupBox>

                <ItemsControl x:Name="AxisMappingsControl" Margin="10,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource SurfaceBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    Margin="0,2"
                                    Padding="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                             Text="{Binding AxisName, Mode=TwoWay}"
                                             FontWeight="Bold"
                                             VerticalAlignment="Center"
                                             Margin="2"/>
                                    <TextBox Grid.Column="1"
                                             Text="{Binding Description, Mode=TwoWay}"
                                             Margin="2"/>
                                    <TextBox Grid.Column="2"
                                             Text="{Binding Address, Mode=TwoWay}"
                                             Margin="2"/>
                                    <TextBox Grid.Column="3"
                                             Text="{Binding ScaleFactor, Mode=TwoWay}"
                                             Margin="2"/>
                                    <Button Grid.Column="4"
                                            Content="{DynamicResource Mappings.Remove}"
                                            Click="RemoveAxis_Click"
                                            Background="{DynamicResource DangerBrush}"
                                            Foreground="White"
                                            Padding="5,2"
                                            Margin="2"
                                            MinWidth="75"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Add Axis Button -->
                <Button Content="{DynamicResource Mappings.AddAxis}"
                        Click="AddAxis_Click"
                        Width="120"
                        HorizontalAlignment="Left"
                        Margin="10,10,0,0"
                        Background="{DynamicResource SuccessBrush}"
                        Foreground="White"
                        Padding="10,5"/>

                <GroupBox Header="{DynamicResource Mappings.Information}" Margin="10,20,10,10">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Mappings.Info1}"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{DynamicResource Mappings.Info2}"
                                   TextWrapping="Wrap" Margin="0,5,0,0"/>
                        <TextBlock Text="{DynamicResource Mappings.Info3}"
                                   TextWrapping="Wrap" Margin="0,5,0,0" FontStyle="Italic"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="{DynamicResource Mappings.Save}"
                    Click="Save_Click"
                    Background="{DynamicResource SuccessBrush}"
                    Foreground="White"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    MinWidth="100"/>
            <Button Content="{DynamicResource Mappings.Cancel}"
                    Click="Cancel_Click"
                    Padding="15,8"
                    MinWidth="100"/>
        </StackPanel>
    </Grid>
</Window>

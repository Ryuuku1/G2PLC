<Window x:Class="G2PLC.UI.Wpf.MonitoringConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource Monitor.ConfigWindowTitle}"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource TextBrush}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Add Button -->
        <GroupBox Grid.Row="0" Header="{DynamicResource Monitor.ConfigHeader}" Margin="0,0,0,10">
            <Button Content="{DynamicResource Monitor.AddRegister}"
                    Click="AddRegister_Click"
                    HorizontalAlignment="Left"
                    Background="{DynamicResource SuccessBrush}"
                    Foreground="White"
                    Padding="10,5"
                    Margin="5"
                    MinWidth="120"/>
        </GroupBox>

        <!-- Register List -->
        <GroupBox Grid.Row="1" Header="{DynamicResource Monitor.RegistersHeader}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding MonitoredRegisters}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource SurfaceBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    Margin="0,5"
                                    Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{DynamicResource Monitor.RegisterAddress}"
                                                   FontSize="10"
                                                   Opacity="0.7"/>
                                        <TextBox Text="{Binding Address, Mode=TwoWay}"
                                                 FontWeight="Bold"
                                                 Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="{DynamicResource Monitor.Description}"
                                                   FontSize="10"
                                                   Opacity="0.7"/>
                                        <TextBox Text="{Binding Description, Mode=TwoWay}"
                                                 Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <Button Grid.Column="2"
                                            Content="{DynamicResource Monitor.Remove}"
                                            Click="RemoveRegister_Click"
                                            Background="{DynamicResource DangerBrush}"
                                            Foreground="White"
                                            Padding="10,5"
                                            VerticalAlignment="Center"
                                            Margin="10,0,0,0"
                                            MinWidth="100"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="{DynamicResource Button.Save}"
                    Click="Save_Click"
                    Background="{DynamicResource SuccessBrush}"
                    Foreground="White"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    MinWidth="100"/>
            <Button Content="{DynamicResource Button.Cancel}"
                    Click="Cancel_Click"
                    Padding="15,8"
                    MinWidth="100"/>
        </StackPanel>
    </Grid>
</Window>

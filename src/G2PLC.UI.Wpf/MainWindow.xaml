<Window x:Class="G2PLC.UI.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:G2PLC.UI.Wpf.ViewModels"
        xmlns:converters="clr-namespace:G2PLC.UI.Wpf.Converters"
        mc:Ignorable="d"
        Title="{DynamicResource Window.Title}"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="ThemeDictionary" Source="Themes/DarkTheme.xaml"/>
                <ResourceDictionary x:Name="StringsDictionary" Source="Resources/Strings.en.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:ConnectionStatusColorConverter x:Key="ConnectionStatusColorConverter"/>
            <converters:ConnectionStatusTextConverter x:Key="ConnectionStatusTextConverter"/>
            <converters:ModbusVisibilityConverter x:Key="ModbusVisibilityConverter"/>
            <converters:OpcUaVisibilityConverter x:Key="OpcUaVisibilityConverter"/>
            <converters:PlcTypeToVisibilityConverter x:Key="PlcTypeToVisibilityConverter"/>

            <!-- Start/Stop Button Styles -->
            <Style x:Key="StartButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                  Background="{TemplateBinding Background}"
                                  CornerRadius="3"
                                  Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource SuccessHoverBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="StopButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                  Background="{TemplateBinding Background}"
                                  CornerRadius="3"
                                  Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource DangerHoverBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="{DynamicResource Menu.File}">
                <MenuItem Header="{DynamicResource Menu.LoadFile}" Command="{Binding LoadFileCommand}" />
                <Separator/>
                <MenuItem Header="{DynamicResource Menu.Exit}" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu.Configuration}">
                <MenuItem Header="{DynamicResource Menu.EditMappings}" Command="{Binding EditMappingsCommand}"/>
                <MenuItem Header="{DynamicResource Menu.LoadMappings}" Command="{Binding LoadMappingsCommand}"/>
                <MenuItem Header="{DynamicResource Menu.SaveMappings}" Command="{Binding SaveMappingsCommand}"/>
                <Separator/>
                <MenuItem Header="{DynamicResource Menu.ConfigureMonitoringRegisters}" Command="{Binding ConfigureMonitoringCommand}"/>
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu.View}">
                <MenuItem Header="{DynamicResource Menu.DarkTheme}" Click="DarkTheme_Click" IsCheckable="True" IsChecked="True" Name="DarkThemeMenuItem"/>
                <MenuItem Header="{DynamicResource Menu.LightTheme}" Click="LightTheme_Click" IsCheckable="True" Name="LightThemeMenuItem"/>
                <Separator/>
                <MenuItem Header="{DynamicResource Menu.Language}">
                    <MenuItem Header="{DynamicResource Menu.English}" Click="English_Click" IsCheckable="True" IsChecked="True" Name="EnglishMenuItem"/>
                    <MenuItem Header="{DynamicResource Menu.Portuguese}" Click="Portuguese_Click" IsCheckable="True" Name="PortugueseMenuItem"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu.Help}">
                <MenuItem Header="{DynamicResource Menu.Documents}">
                    <MenuItem Header="{DynamicResource Menu.OpenExamplesFolder}" Click="OpenExamplesFolder_Click"/>
                    <Separator/>
                    <MenuItem Header="{DynamicResource Menu.Simple3AxisExample}" Click="OpenSimple3AxisExample_Click"/>
                    <MenuItem Header="{DynamicResource Menu.ModbusExample}" Click="OpenModbusExample_Click"/>
                    <MenuItem Header="{DynamicResource Menu.OpcUaExample}" Click="OpenOpcUaExample_Click"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="{DynamicResource Menu.About}" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <TabControl Margin="10" DockPanel.Dock="Bottom">
            <!-- Tab 1: Control -->
            <TabItem Header="{DynamicResource Tab.Control}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- File Selection Section -->
                    <GroupBox Grid.Row="0" Header="{DynamicResource FileSelection.Header}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Content="{DynamicResource FileSelection.FileType}"/>
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding FileTypes}"
                                      SelectedItem="{Binding FileType}"/>

                            <TextBox Grid.Column="2"
                                     Text="{Binding FilePath}"
                                     IsReadOnly="True"
                                     ToolTip="{DynamicResource FileSelection.Tooltip}"/>

                            <Button Grid.Column="3"
                                    Content="{DynamicResource FileSelection.Browse}"
                                    Command="{Binding LoadFileCommand}"/>
                        </Grid>
                    </GroupBox>

                    <!-- PLC Configuration Section -->
                    <GroupBox Grid.Row="1" Header="{DynamicResource PlcConfig.Header}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" Content="{DynamicResource PlcConfig.PlcType}"/>
                                <ComboBox Grid.Column="1"
                                          ItemsSource="{Binding PlcTypes}"
                                          SelectedItem="{Binding PlcType}"/>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="{DynamicResource PlcConfig.Connect}"
                                            Command="{Binding ConnectPlcCommand}"
                                            IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBoolConverter}}"/>
                                    <Button Content="{DynamicResource PlcConfig.Disconnect}"
                                            Command="{Binding DisconnectPlcCommand}"
                                            IsEnabled="{Binding IsConnected}"/>
                                </StackPanel>
                            </Grid>

                            <Grid Grid.Row="1" Visibility="{Binding PlcType, Converter={StaticResource PlcTypeToVisibilityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <!-- Modbus Settings -->
                                <StackPanel Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal"
                                            Visibility="{Binding PlcType, Converter={StaticResource ModbusVisibilityConverter}}">
                                    <Label Content="{DynamicResource PlcConfig.IpAddress}"/>
                                    <TextBox Width="150" Text="{Binding PlcAddress}"/>
                                    <Label Content="{DynamicResource PlcConfig.Port}"/>
                                    <TextBox Width="80" Text="{Binding PlcPort}"/>
                                </StackPanel>

                                <!-- OPC UA Settings -->
                                <StackPanel Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal"
                                            Visibility="{Binding PlcType, Converter={StaticResource OpcUaVisibilityConverter}}">
                                    <Label Content="{DynamicResource PlcConfig.EndpointUrl}"/>
                                    <TextBox Width="400" Text="{Binding OpcUaEndpoint}"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </GroupBox>

                    <!-- Execution Control Section -->
                    <GroupBox Grid.Row="2" Header="{DynamicResource Execution.Header}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Button Content="{DynamicResource Execution.Start}"
                                        Style="{StaticResource StartButton}"
                                        Command="{Binding StartExecutionCommand}"
                                        MinWidth="120"/>
                                <Button Content="{DynamicResource Execution.Stop}"
                                        Style="{StaticResource StopButton}"
                                        Command="{Binding StopExecutionCommand}"
                                        MinWidth="120"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <TextBlock Text="{DynamicResource Execution.Line}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding CurrentLine}" Width="50" TextAlignment="Right"/>
                                <TextBlock Text="/" Margin="0,5"/>
                                <TextBlock Text="{Binding TotalLines}" Width="50"/>

                                <TextBlock Text="{DynamicResource Execution.Progress}" FontWeight="Bold" Margin="20,5,5,5"/>
                                <TextBlock Text="{Binding ProgressPercentage}" Width="40" TextAlignment="Right"/>
                                <TextBlock Text="%" Margin="0,5"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- Progress and Log Section -->
                    <GroupBox Grid.Row="3" Header="{DynamicResource Status.Header}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Connection Status -->
                            <Border Grid.Row="0"
                                    Background="{Binding IsConnected, Converter={StaticResource ConnectionStatusColorConverter}}"
                                    Padding="10"
                                    Margin="0,0,0,5"
                                    CornerRadius="3">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="●"
                                               FontSize="16"
                                               Margin="0,0,10,0"
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding IsConnected, Converter={StaticResource ConnectionStatusTextConverter}}"
                                               Foreground="White"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <!-- Progress Bar -->
                            <ProgressBar Grid.Row="1"
                                         Height="25"
                                         Value="{Binding ProgressPercentage}"
                                         Minimum="0"
                                         Maximum="100"
                                         Margin="0,0,0,5"/>

                            <!-- Log Messages -->
                            <Border Grid.Row="2"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    Background="{DynamicResource BackgroundBrush}">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding LogMessages}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}"
                                                           Margin="5,2"
                                                           FontFamily="Consolas"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </GroupBox>

                    <!-- Status Bar -->
                    <Border Grid.Row="4"
                            Background="{DynamicResource PrimaryBrush}"
                            Padding="10,5"
                            Margin="0,5,0,0">
                        <TextBlock Text="{Binding StatusMessage}"
                                   Foreground="White"
                                   FontWeight="Bold"/>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Tab 2: PLC Monitoring -->
            <TabItem Header="{DynamicResource Tab.Monitoring}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Control Panel -->
                    <GroupBox Grid.Row="0" Header="{DynamicResource Monitor.Title}" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Monitoring Controls -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                                <Button Content="{DynamicResource Monitor.StartMonitoring}"
                                        Command="{Binding StartMonitoringCommand}"
                                        IsEnabled="{Binding IsConnected}"
                                        Background="{DynamicResource SuccessBrush}"
                                        Foreground="White"
                                        Padding="10,5"
                                        Margin="0,0,5,0"
                                        MinWidth="150"/>
                                <Button Content="{DynamicResource Monitor.StopMonitoring}"
                                        Command="{Binding StopMonitoringCommand}"
                                        IsEnabled="{Binding IsMonitoringActive}"
                                        Background="{DynamicResource DangerBrush}"
                                        Foreground="White"
                                        Padding="10,5"
                                        Margin="0,0,20,0"
                                        MinWidth="150"/>

                                <TextBlock Text="{DynamicResource Monitor.RefreshRate}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,5,0"/>
                                <TextBox Text="{Binding RefreshRate, Mode=TwoWay}"
                                         Width="80"
                                         VerticalAlignment="Center"
                                         Margin="0,0,20,0"/>

                                <TextBlock Text="{DynamicResource Monitor.LastUpdate}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding LastUpdateTime}"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource PrimaryBrush}"/>
                            </StackPanel>

                            <!-- Info Message -->
                            <Border Grid.Row="1"
                                    Background="{DynamicResource SurfaceBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Padding="10"
                                    Margin="5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ℹ"
                                               FontSize="16"
                                               Foreground="{DynamicResource PrimaryBrush}"
                                               Margin="0,0,10,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock TextWrapping="Wrap" VerticalAlignment="Center">
                                        <Run Text="Configure registers to monitor via " />
                                        <Run Text="Configuration → Configure Monitoring Registers" FontWeight="Bold" Foreground="{DynamicResource PrimaryBrush}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </GroupBox>

                    <!-- Register List with Live Values -->
                    <GroupBox Grid.Row="1" Header="{DynamicResource Monitor.RegistersHeader}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding MonitoredRegisters}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource SurfaceBrush}"
                                                BorderBrush="{DynamicResource BorderBrush}"
                                                BorderThickness="1"
                                                Margin="5"
                                                Padding="15"
                                                CornerRadius="3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="200"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Register Address Badge -->
                                                <Border Grid.Column="0"
                                                        Background="{DynamicResource PrimaryBrush}"
                                                        CornerRadius="3"
                                                        Padding="10,5"
                                                        Margin="0,0,15,0">
                                                    <StackPanel>
                                                        <TextBlock Text="{DynamicResource Monitor.RegisterAddress}"
                                                                   FontSize="9"
                                                                   Foreground="White"
                                                                   Opacity="0.8"
                                                                   HorizontalAlignment="Center"/>
                                                        <TextBlock Text="{Binding Address}"
                                                                   FontSize="18"
                                                                   FontWeight="Bold"
                                                                   Foreground="White"
                                                                   HorizontalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>

                                                <!-- Current Value Display -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{DynamicResource Monitor.RegisterValue}"
                                                               FontSize="10"
                                                               Opacity="0.7"
                                                               Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding CurrentValue}"
                                                               FontSize="32"
                                                               FontWeight="Bold"
                                                               Foreground="{DynamicResource SuccessBrush}"/>
                                                </StackPanel>

                                                <!-- Description -->
                                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="15,0,0,0">
                                                    <TextBlock Text="{DynamicResource Monitor.Description}"
                                                               FontSize="10"
                                                               Opacity="0.7"
                                                               Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Description}"
                                                               FontSize="14"
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Tab 3: Execution Flow -->
            <TabItem Header="{DynamicResource Tab.ExecutionFlow}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource PrimaryBrush}"
                            Padding="15"
                            Margin="0,0,0,10"
                            CornerRadius="3">
                        <TextBlock Text="{DynamicResource Flow.Title}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </Border>

                    <!-- Timeline View -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20,0">
                            <!-- Previous Steps Section -->
                            <ItemsControl ItemsSource="{Binding PreviousSteps}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Line Number Badge -->
                                            <Border Grid.Column="0"
                                                    Background="{DynamicResource SuccessBrush}"
                                                    CornerRadius="15"
                                                    Padding="8,5"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding LineNumber}"
                                                           Foreground="White"
                                                           FontWeight="Bold"
                                                           FontSize="12"
                                                           HorizontalAlignment="Center"/>
                                            </Border>

                                            <!-- Timeline Connector -->
                                            <Rectangle Grid.Column="1"
                                                       Width="3"
                                                       Fill="{DynamicResource SuccessBrush}"
                                                       HorizontalAlignment="Center"
                                                       Opacity="0.5"/>

                                            <!-- Command Card -->
                                            <Border Grid.Column="2"
                                                    Background="{DynamicResource SurfaceBrush}"
                                                    BorderBrush="{DynamicResource SuccessBrush}"
                                                    BorderThickness="2"
                                                    CornerRadius="5"
                                                    Padding="12"
                                                    Margin="5,0,0,0">
                                                <StackPanel>
                                                    <TextBlock Text="✓ Completed"
                                                               FontSize="9"
                                                               Foreground="{DynamicResource SuccessBrush}"
                                                               FontWeight="Bold"
                                                               Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Command}"
                                                               FontFamily="Consolas"
                                                               FontSize="13"
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Current Step (Highlighted) -->
                            <Grid Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Animated Badge -->
                                <Border Grid.Column="0"
                                        Background="{DynamicResource PrimaryBrush}"
                                        CornerRadius="20"
                                        Padding="10,8"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding CurrentStep.LineNumber}"
                                               Foreground="White"
                                               FontWeight="Bold"
                                               FontSize="16"
                                               HorizontalAlignment="Center"/>
                                </Border>

                                <!-- Timeline Connector -->
                                <Rectangle Grid.Column="1"
                                           Width="4"
                                           Fill="{DynamicResource PrimaryBrush}"
                                           HorizontalAlignment="Center"/>

                                <!-- Current Command Card (Large) -->
                                <Border Grid.Column="2"
                                        Background="{DynamicResource PrimaryBrush}"
                                        CornerRadius="8"
                                        Padding="20"
                                        Margin="5,0,0,0">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="▶"
                                                       FontSize="14"
                                                       Foreground="White"
                                                       FontWeight="Bold"
                                                       Margin="0,0,8,0"/>
                                            <TextBlock Text="EXECUTING NOW"
                                                       FontSize="11"
                                                       Foreground="White"
                                                       FontWeight="Bold"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding CurrentStep.Command}"
                                                   FontFamily="Consolas"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Next Steps Section -->
                            <ItemsControl ItemsSource="{Binding NextSteps}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Line Number Badge -->
                                            <Border Grid.Column="0"
                                                    Background="{DynamicResource BorderBrush}"
                                                    CornerRadius="15"
                                                    Padding="8,5"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Opacity="0.6">
                                                <TextBlock Text="{Binding LineNumber}"
                                                           Foreground="{DynamicResource TextBrush}"
                                                           FontWeight="Bold"
                                                           FontSize="12"
                                                           HorizontalAlignment="Center"
                                                           Opacity="0.7"/>
                                            </Border>

                                            <!-- Timeline Connector -->
                                            <Rectangle Grid.Column="1"
                                                       Width="3"
                                                       Fill="{DynamicResource BorderBrush}"
                                                       HorizontalAlignment="Center"
                                                       Opacity="0.3"/>

                                            <!-- Command Card -->
                                            <Border Grid.Column="2"
                                                    Background="{DynamicResource SurfaceBrush}"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="5"
                                                    Padding="12"
                                                    Margin="5,0,0,0"
                                                    Opacity="0.7">
                                                <StackPanel>
                                                    <TextBlock Text="⏱ Pending"
                                                               FontSize="9"
                                                               Foreground="{DynamicResource TextBrush}"
                                                               Opacity="0.6"
                                                               Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Command}"
                                                               FontFamily="Consolas"
                                                               FontSize="13"
                                                               TextWrapping="Wrap"
                                                               Opacity="0.8"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>

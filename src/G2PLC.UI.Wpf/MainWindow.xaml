<Window x:Class="G2PLC.UI.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:G2PLC.UI.Wpf.ViewModels"
        xmlns:converters="clr-namespace:G2PLC.UI.Wpf.Converters"
        mc:Ignorable="d"
        Title="{DynamicResource Window.Title}"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="ThemeDictionary" Source="Themes/DarkTheme.xaml"/>
                <ResourceDictionary x:Name="StringsDictionary" Source="Resources/Strings.en.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:ConnectionStatusColorConverter x:Key="ConnectionStatusColorConverter"/>
            <converters:ConnectionStatusTextConverter x:Key="ConnectionStatusTextConverter"/>
            <converters:ModbusVisibilityConverter x:Key="ModbusVisibilityConverter"/>
            <converters:OpcUaVisibilityConverter x:Key="OpcUaVisibilityConverter"/>
            <converters:PlcTypeToVisibilityConverter x:Key="PlcTypeToVisibilityConverter"/>

            <!-- Start/Stop Button Styles -->
            <Style x:Key="StartButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                  Background="{TemplateBinding Background}"
                                  CornerRadius="3"
                                  Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource SuccessHoverBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="StopButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                  Background="{TemplateBinding Background}"
                                  CornerRadius="3"
                                  Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource DangerHoverBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="{DynamicResource Menu.File}">
                <MenuItem Header="{DynamicResource Menu.LoadFile}" Command="{Binding LoadFileCommand}" />
                <Separator/>
                <MenuItem Header="{DynamicResource Menu.Exit}" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu.Configuration}">
                <MenuItem Header="{DynamicResource Menu.EditMappings}" Command="{Binding EditMappingsCommand}"/>
                <MenuItem Header="{DynamicResource Menu.LoadMappings}" Command="{Binding LoadMappingsCommand}"/>
                <MenuItem Header="{DynamicResource Menu.SaveMappings}" Command="{Binding SaveMappingsCommand}"/>
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu.View}">
                <MenuItem Header="{DynamicResource Menu.DarkTheme}" Click="DarkTheme_Click" IsCheckable="True" IsChecked="True" Name="DarkThemeMenuItem"/>
                <MenuItem Header="{DynamicResource Menu.LightTheme}" Click="LightTheme_Click" IsCheckable="True" Name="LightThemeMenuItem"/>
                <Separator/>
                <MenuItem Header="{DynamicResource Menu.Language}">
                    <MenuItem Header="{DynamicResource Menu.English}" Click="English_Click" IsCheckable="True" IsChecked="True" Name="EnglishMenuItem"/>
                    <MenuItem Header="{DynamicResource Menu.Portuguese}" Click="Portuguese_Click" IsCheckable="True" Name="PortugueseMenuItem"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu.Help}">
                <MenuItem Header="{DynamicResource Menu.Documents}">
                    <MenuItem Header="{DynamicResource Menu.OpenExamplesFolder}" Click="OpenExamplesFolder_Click"/>
                    <Separator/>
                    <MenuItem Header="{DynamicResource Menu.Simple3AxisExample}" Click="OpenSimple3AxisExample_Click"/>
                    <MenuItem Header="{DynamicResource Menu.ModbusExample}" Click="OpenModbusExample_Click"/>
                    <MenuItem Header="{DynamicResource Menu.OpcUaExample}" Click="OpenOpcUaExample_Click"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="{DynamicResource Menu.About}" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <Grid Margin="10" DockPanel.Dock="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- File Selection Section -->
            <GroupBox Grid.Row="0" Header="{DynamicResource FileSelection.Header}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="{DynamicResource FileSelection.FileType}"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding FileTypes}"
                              SelectedItem="{Binding FileType}"/>

                    <TextBox Grid.Column="2"
                             Text="{Binding FilePath}"
                             IsReadOnly="True"
                             ToolTip="{DynamicResource FileSelection.Tooltip}"/>

                    <Button Grid.Column="3"
                            Content="{DynamicResource FileSelection.Browse}"
                            Command="{Binding LoadFileCommand}"/>
                </Grid>
            </GroupBox>

            <!-- PLC Configuration Section -->
            <GroupBox Grid.Row="1" Header="{DynamicResource PlcConfig.Header}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Content="{DynamicResource PlcConfig.PlcType}"/>
                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding PlcTypes}"
                                  SelectedItem="{Binding PlcType}"/>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="{DynamicResource PlcConfig.Connect}"
                                    Command="{Binding ConnectPlcCommand}"
                                    IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBoolConverter}}"/>
                            <Button Content="{DynamicResource PlcConfig.Disconnect}"
                                    Command="{Binding DisconnectPlcCommand}"
                                    IsEnabled="{Binding IsConnected}"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1" Visibility="{Binding PlcType, Converter={StaticResource PlcTypeToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <!-- Modbus Settings -->
                        <StackPanel Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal"
                                    Visibility="{Binding PlcType, Converter={StaticResource ModbusVisibilityConverter}}">
                            <Label Content="{DynamicResource PlcConfig.IpAddress}"/>
                            <TextBox Width="150" Text="{Binding PlcAddress}"/>
                            <Label Content="{DynamicResource PlcConfig.Port}"/>
                            <TextBox Width="80" Text="{Binding PlcPort}"/>
                        </StackPanel>

                        <!-- OPC UA Settings -->
                        <StackPanel Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal"
                                    Visibility="{Binding PlcType, Converter={StaticResource OpcUaVisibilityConverter}}">
                            <Label Content="{DynamicResource PlcConfig.EndpointUrl}"/>
                            <TextBox Width="400" Text="{Binding OpcUaEndpoint}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </GroupBox>

            <!-- Execution Control Section -->
            <GroupBox Grid.Row="2" Header="{DynamicResource Execution.Header}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button Content="{DynamicResource Execution.Start}"
                                Style="{StaticResource StartButton}"
                                Command="{Binding StartExecutionCommand}"
                                MinWidth="120"/>
                        <Button Content="{DynamicResource Execution.Stop}"
                                Style="{StaticResource StopButton}"
                                Command="{Binding StopExecutionCommand}"
                                MinWidth="120"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="{DynamicResource Execution.Line}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding CurrentLine}" Width="50" TextAlignment="Right"/>
                        <TextBlock Text="/" Margin="0,5"/>
                        <TextBlock Text="{Binding TotalLines}" Width="50"/>

                        <TextBlock Text="{DynamicResource Execution.Progress}" FontWeight="Bold" Margin="20,5,5,5"/>
                        <TextBlock Text="{Binding ProgressPercentage}" Width="40" TextAlignment="Right"/>
                        <TextBlock Text="%" Margin="0,5"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Progress and Log Section -->
            <GroupBox Grid.Row="3" Header="{DynamicResource Status.Header}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Connection Status -->
                    <Border Grid.Row="0"
                            Background="{Binding IsConnected, Converter={StaticResource ConnectionStatusColorConverter}}"
                            Padding="10"
                            Margin="0,0,0,5"
                            CornerRadius="3">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â—"
                                       FontSize="16"
                                       Margin="0,0,10,0"
                                       Foreground="White"/>
                            <TextBlock Text="{Binding IsConnected, Converter={StaticResource ConnectionStatusTextConverter}}"
                                       Foreground="White"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- Progress Bar -->
                    <ProgressBar Grid.Row="1"
                                 Height="25"
                                 Value="{Binding ProgressPercentage}"
                                 Minimum="0"
                                 Maximum="100"
                                 Margin="0,0,0,5"/>

                    <!-- Log Messages -->
                    <Border Grid.Row="2"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            Background="{DynamicResource BackgroundBrush}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding LogMessages}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="5,2"
                                                   FontFamily="Consolas"
                                                   FontSize="12"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </GroupBox>

            <!-- Status Bar -->
            <Border Grid.Row="4"
                    Background="{DynamicResource PrimaryBrush}"
                    Padding="10,5"
                    Margin="0,5,0,0">
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="White"
                           FontWeight="Bold"/>
            </Border>
        </Grid>
    </DockPanel>
</Window>
